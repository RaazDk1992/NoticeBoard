<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="0dp"
    android:layout_marginBottom="0dp"
    >

    <ImageView
        android:layout_alignParentTop="true"
        android:id="@+id/candidate_image"
        android:layout_width="match_parent"
        android:layout_gravity="center"
        android:adjustViewBounds="true"
        android:scaleType="fitXY"
        android:layout_height="@dimen/image_height_standard" />

    <TextView
        android:id="@+id/candidate_designation"
        android:layout_below="@id/candidate_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="10sp"
        android:textStyle="bold"
        android:textColor="@color/lb_playback_controls_background_light"
        />
    <TextView
        android:id="@+id/candidate_name"
        android:layout_below="@id/candidate_designation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/app_header_bg"
        android:textSize="15sp"
        android:textStyle="italic"
        />

</RelativeLayout>